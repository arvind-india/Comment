<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/ru.commenthere.comment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:background="@drawable/fon3_plashka">

    <ImageView
        android:id="@+id/note_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:background="@drawable/note_image_bg"
        android:src="@drawable/fon2_foto_like1" />

    <TextView
        android:id="@+id/note_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/note_image"
        android:layout_marginBottom="5dip"
        android:layout_marginRight="5dip"
        android:text="Name"
        android:textColor="@color/black_color"/>

    <TextView
        android:id="@+id/note_dislikes_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dip"
        android:layout_marginLeft="5dip"
        android:text="0" />

    <ru.commenthere.comment.view.CustomButton
        android:id="@+id/note_add_dislike_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dip"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5dip"
        android:layout_toLeftOf="@id/note_dislikes_amount"
        android:background="@drawable/fon2_foto_unlike1" />

    <TextView
        android:id="@+id/note_likes_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/note_add_dislike_btn"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dip"
        android:text="0" />

    <ru.commenthere.comment.view.CustomButton
        android:id="@+id/note_add_like_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5dip"
        android:layout_toLeftOf="@id/note_likes_amount"
        android:background="@drawable/fon2_foto_like" />

</RelativeLayout>